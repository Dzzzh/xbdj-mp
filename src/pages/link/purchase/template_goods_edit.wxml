<template name="goods-edit">
  <van-cell-group custom-class="goods-item">
    <van-field label="商品{{index+1}}" placeholder="商品名称" confirm-type="next" value="{{goods[index].name}}"
      data-key="goods[{{index}}].name" data-rule="goods.name"
      required="{{validateResult.goods[index].name.result!==undefined && !validateResult.goods[index].name.result}}"
      error-message="{{validateResult.goods[index].name.message}}" bind:change="onChange" bind:blur="onBlur"/>
    <van-field label="规格" placeholder="每份5斤" confirm-type="next" value="{{goods[index].specification}}"
    data-key="goods[{{index}}].specification" bind:change="onChange"/>
    <van-field label="价格" placeholder="每份价格" confirm-type="next" type="digit"
      value="{{goods[index].price || '' }}" data-key="goods[{{index}}].price" data-rule="goods.price"
      required="{{validateResult.goods[index].price.result!==undefined && !validateResult.goods[index].price.result}}" error-message="{{validateResult.goods[index].price.message}}" bind:change="onChange" bind:blur="onBlur"/>
  </van-cell-group>
</template>
